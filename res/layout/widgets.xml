<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        android:layout_width="fill_parent" android:id="@+id/widgetsGridLayout"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:columnCount="3" android:rowCount="3" android:background="@android:color/holo_blue_light"
        android:useDefaultMargins="true" android:paddingTop="30dp">
    <Button
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="长形进度条"
            android:id="@+id/progressBarBtn" android:layout_row="0" android:layout_column="0" android:height="100dp"
            android:background="@android:color/holo_orange_dark"/>
    <Button
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="对话框"
            android:id="@+id/dialogBtn" android:layout_row="0" android:layout_column="1" android:height="100dp"
            android:background="@android:color/holo_green_light"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="消息提示"
            android:id="@+id/toastBtn" android:layout_row="0" android:layout_column="2" android:height="100dp"
            android:background="@android:color/holo_blue_dark"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="圆形进度条"
            android:id="@+id/circleProgressBarBtn" android:layout_row="1" android:layout_column="0" android:height="100dp"
            android:background="@android:color/holo_purple"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="通知"
            android:id="@+id/notificationBtn" android:layout_row="1" android:layout_column="1" android:height="100dp"
            android:background="@android:color/holo_red_dark"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="触摸监听"
            android:id="@+id/touchBtn" android:layout_row="1" android:layout_column="2" android:height="100dp"
            android:background="@android:color/holo_red_light"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="对话框"
            android:id="@+id/touchBtn" android:layout_row="2" android:layout_column="0" android:height="100dp"
            android:background="#fffd43"/>
    <ToggleButton
            android:layout_width="107dp"
            android:layout_height="98dp"
            android:id="@+id/toggleBtn" android:layout_row="2" android:layout_column="1" android:height="100dp"
            android:width="100dp" android:checked="false" android:textOff="闪光灯开" android:textOn="闪光灯关"
            android:background="#120fff"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="返回"
            android:id="@+id/backBtn" android:layout_row="2" android:layout_column="2" android:height="100dp"
            android:background="#ff39da"/>
</GridLayout>