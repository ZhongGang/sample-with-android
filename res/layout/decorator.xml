<?xml version="1.0" encoding="utf-8"?>

<GridLayout
        android:layout_width="fill_parent" android:id="@+id/widgetsGridLayout"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:columnCount="3" android:rowCount="3" android:background="#33B5E5"
        android:useDefaultMargins="true" android:paddingTop="30dp">
    <Button
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="组件"
            android:id="@+id/widgetBtn" android:layout_row="0" android:layout_column="0" android:height="100dp"
            android:background="@android:color/holo_green_dark"/>
    <Button
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:text="登录"
            android:id="@+id/logonBtn" android:layout_row="0" android:layout_column="1" android:height="100dp"
            android:background="@android:color/holo_red_light"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="商铺"
            android:id="@+id/shopBtn" android:layout_row="0" android:layout_column="2" android:height="100dp"
            android:background="@android:color/holo_blue_dark"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="列表数据"
            android:id="@+id/listBtn" android:layout_row="1" android:layout_column="0"
            android:height="100dp"
            android:background="@android:color/holo_purple"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="按钮"
            android:id="@+id/btn2" android:layout_row="1" android:layout_column="1" android:height="100dp"
            android:background="@android:color/holo_red_dark"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="按钮" android:id="@+id/btn3"
            android:layout_row="1" android:layout_column="2" android:height="100dp" android:background="#fffd43"/>
    <Spinner
            android:layout_width="98dp"
            android:layout_height="89dp"
            android:id="@+id/selectBtn" android:layout_row="2" android:layout_column="0"
            android:background="#20fffc" android:spinnerMode="dialog"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="按钮" android:id="@+id/btn5"
            android:layout_row="2" android:layout_column="1" android:height="100dp" android:background="#fffd43"/>
    <Button android:layout_width="101dp" android:layout_height="wrap_content" android:text="按钮" android:id="@+id/btn6"
            android:layout_row="2" android:layout_column="2" android:height="100dp" android:background="#fffd43"/>
</GridLayout>